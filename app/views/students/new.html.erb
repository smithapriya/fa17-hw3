<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name, nil, placeholder: 'Ex: Oski Bear') %>

  <%= label_tag(:course_name, "Course name") %>
  <%= text_field_tag(:course_name, nil, placeholder: 'Ex: CS 61A') %>

  <%= label_tag(:graduation_date, "Graduating Class") %>
  <%= text_field_tag(:graduation_date, nil, placeholder: 'Ex: 2021') %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>